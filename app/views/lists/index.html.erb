<div class="text-center mt-5">
  <div class="card mx-auto" style="max-width: 600px; background-color: #e6e6fa; color: #4b0082;">
    <div class="card-body">
      <h1 class="card-title mb-4" style="color: #4b0082;">Choose one of your lists:</h1>
      
      <ol class="list-group list-group-numbered">
        <% @lists.each do |list| %>
          <li class="list-group-item" style="background-color: #e6e6fa; color: #4b0082;">
            <%= link_to list.name, list_path(list), class: "text-decoration-none", style: "color: #4b0082;" %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>

  <br>

  <%= link_to "Add a new list", new_list_path, class: "btn btn-dark mt-3", style: "background-color: #4b0082; border-color: #4b0082;" %>
</div>
